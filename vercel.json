{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "git": {
    "deploymentEnabled": {
      "master": true
    }
  },
  "env": {
    "NODE_ENV": "production"
  },

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/bungie/oauth/token",
      "destination": "/api/bungie/oauth/token.js"
    },
    {
      "source": "/api/bungie/user/profile",
      "destination": "/api/bungie/user/profile.js"
    },
    {
      "source": "/api/bungie/user/memberships",
      "destination": "/api/bungie/user/memberships.js"
    },
    {
      "source": "/api/destiny2/profile/:membershipType/:membershipId",
      "destination": "/api/destiny2/profile/[membershipType]/[membershipId].js"
    },
    {
      "source": "/api/manifest/info",
      "destination": "/api/manifest/info.js"
    }
  ]
}