# Bungie API Configuration
VITE_BUNGIE_CLIENT_ID=your_bungie_client_id_here
BUNGIE_CLIENT_SECRET=your_bungie_client_secret_here
BUNGIE_API_KEY=your_bungie_api_key_here

# Token Security (32 characters minimum for AES-256)
TOKEN_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Supabase Configuration (if still using for user management)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
NODE_ENV=production

# Logging Configuration
# Available levels: ERROR, WARN, INFO, DEBUG
# Use ERROR in production to minimize console output
VITE_LOG_LEVEL=INFO

# OAuth Redirect URIs
# Development
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/bungie/callback
# Production (update with your actual Vercel domain)
VITE_OAUTH_REDIRECT_URI_PROD=https://your-app.vercel.app/auth/bungie/callback

# Backend API URLs
# Development
VITE_API_BASE_URL=http://localhost:3001
# Production (update with your actual backend URL)
VITE_API_BASE_URL_PROD=https://your-backend.vercel.app

# Note: For Vercel deployment, set these environment variables in your Vercel dashboard
# under Project Settings > Environment Variables
# Remember to set VITE_LOG_LEVEL=ERROR in production for optimal performance